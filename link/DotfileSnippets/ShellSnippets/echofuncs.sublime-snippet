# Used for printing errors:
function echoe () { echo "\${RED}ERROR\${NC}: \$@" 1>&2 ; }

# Used for printing warnings:
function echow () { echo "\${YELLOW}WARNING\${NC}: \$@" 1>&2 ; }
]]></content>
