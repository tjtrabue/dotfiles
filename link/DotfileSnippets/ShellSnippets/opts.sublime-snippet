<snippet>
    <content><![CDATA[
local OPTIND o
    while getopts ":" o; do
        case "\${o}" in
            *)
                ${1:func}_usage
                return 1
                ;;
        esac
    done
    shift \$((OPTIND-1))
]]></content>
    <!-- Optional: Set a tabTrigger to define how to trigger the snippet -->
    <tabTrigger>opts</tabTrigger>
    <!-- Optional: Set a scope to limit where the snippet will trigger -->
    <scope>source.shell</scope>
</snippet>
