! X Resources file
!
! Author: Tom Trabue (tom.trabue@gmail.com)

! Set terminal name
XTerm.termName: xterm-256color

! Ensure that locale is set up for UTF-8
XTerm.vt100.locale: true

! Make ALT key behave like in other terminals
XTerm.vt100.metaSendsEscape: true

! Fix the backspace key behavior in Emacs
XTerm.vt100.backarrowKey: false
XTerm.ttyModes: erase ^?

! Set scrollback line number
Xterm.vt100.saveLines: 10000

! Scrollbar settings
Xterm.vt100.scrollBar: true
Xterm.vt100.scrollbar.width: 8

! Fonts {{{
! Turn on TrueType fonts by default
XTerm.vt100.renderFont: true
! Set TrueType font and size
XTerm*faceName: FiraCode Nerd Font:style=Medium
XTerm*faceSize: 11
! Set default font size
XTerm*font: *-fixed-*-*-*-18-*

! Emacs font
Emacs.font: FiraCode Nerd Font-11
! }}}

! Key bindings {{{
Xterm.vt100.translations: #override \n\
  Ctrl <Key>M: maximize() \n\
  Ctrl <Key>R: restore() \n\
  Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
  Ctrl Shift <Key>V: insert-selection(CLIPBOARD)
! }}}

