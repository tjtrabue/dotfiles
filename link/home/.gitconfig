# User {{{
[user]
  email = tom.trabue@gmail.com
  name = Tom Trabue

[github]
  user = tjtrabue
# }}}

# Core {{{
[core]
  autocrlf = input
  whitespace = fix,space-before-tab,tab-in-indent,trailing-space,-indent-with-non-tab
  editor = nvim
  pager = "less -XF"
  # Prevent showing files whose names contain non-ASCII symbols as unversioned.
  precomposeunicode = false
  # Speed up commands involving untracked files, such as `git status`.
  untrackedCache = true
# }}}

# Apply {{{
[apply]
  whitespace = fix
# }}}

# Aliases {{{
[alias]
  br = branch
  ci = commit
  co = checkout
  df = diff
  g = grep -I
  lg = log -p
  pp = !"echo 'Pull'; git pull; echo 'Push'; git push"
  rb = rbranch
  rv = review
  st = status
  ksdiff = difftool -y -t Kaleidoscope
# }}}

# Branch {{{
[branch]
  # Show most recently changed branches first.
  sort = -committerdate

[branch "master"]
  remote = origin
  merge = refs/heads/master
# }}}

# Pull {{{
[pull]
  # Always rebase current branch on top of the pulled remote tracking branch.
  rebase = true
# }}}

# Push {{{
[push]
  # Use Git 1.x.x default to avoid errors on machines with old Git
  # installations. To use `simple` instead, add this to one of your ~/.extra/
  # files:
  #   `git config --global push.default simple`.
  default = matching
  # Make `git push` push relevant annotated tags when pushing branches out.
  followTags = true
# }}}

# Colors {{{
[color]
  branch = auto
  diff = auto
  interactive = auto
  push = auto
  pager = true
  status = auto
  transport = auto
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold # line info
  old = red bold # deletions
  new = green bold # additions

[color "interactive"]
  prompt = green
  header = yellow
  help = blue
  error = red

[colo "push"]
  error = true

[color "status"]
  header = yellow
  added = yellow
  changed = green
  untracked = cyan
  unmerged = magenta
  branch = blue
  nobranch = red reverse
  localBranch = yellow reverse
  remoteBranch = blue reverse
# }}}

# Help {{{
[help]
  # Automatically correct and execute mistyped commands
  autocorrect = 1
# }}}

# Diff {{{
[diff]
  tool = meld

[difftool]
  prompt = false
# }}}

# Merge {{{
[merge]
  log = true
  # Use meld as default mergetool
  tool = meld

[mergetool]
  prompt = true

[mergetool "meld"]
  # Automatically merge non-conflicting parts, highlight conflicting parts, and
  # wait for user decision.
  useAutoMerge = true
# }}}

# rerere {{{
[rerere]
  enabled = 1
# }}}

# URLs {{{
[url "git@github.com:"]
  insteadOf = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

[url "git@heroku.com:"]
  insteadOf = "heroku:"
# }}}

# Filter {{{
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
# }}}

# Init {{{
[init]
  # Always name the default branch "master" when creating a new git repo.
  defaultBranch = master
# }}}

