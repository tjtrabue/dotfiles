################################################################################

# Indicates when the program should end
end=false

# The associative array that will hold the rows of options
declare -A matrix

################################################################################
##                                                                            ##
##                                 Main Program                               ##
##                                                                            ##
################################################################################

# Begin main program loop:
while ! $end; do

done # End main program loop